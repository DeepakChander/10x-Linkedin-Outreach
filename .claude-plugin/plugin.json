{
  "name": "10x-outreach-skill",
  "version": "3.0.0",
  "description": "Complete multi-platform outreach automation for Claude Code. Supports Gmail, LinkedIn, Twitter, Instagram with team management, intelligent discovery via Exa AI, workflow orchestration with human-like rate limiting, analytics, content marketing, and SEO optimization.",
  "author": "10x.in",
  "homepage": "https://github.com/Anit-1to10x/10x-outreach-skill",
  "repository": "https://github.com/Anit-1to10x/10x-outreach-skill",
  "license": "MIT",
  "keywords": [
    "email",
    "gmail",
    "outreach",
    "linkedin",
    "twitter",
    "instagram",
    "multi-platform",
    "team",
    "discovery",
    "exa-ai",
    "workflow",
    "automation",
    "campaigns",
    "rate-limiting",
    "claudekit-extension",
    "analytics",
    "content-marketing",
    "seo",
    "canvas",
    "mcp"
  ],
  "skills": [
    ".claude/skills/outreach-manager",
    ".claude/skills/inbox-reader",
    ".claude/skills/email-summarizer",
    ".claude/skills/reply-generator",
    ".claude/skills/email-composer",
    ".claude/skills/template-manager",
    ".claude/skills/team-manager",
    ".claude/skills/discovery-engine",
    ".claude/skills/workflow-engine",
    ".claude/skills/linkedin-adapter",
    ".claude/skills/twitter-adapter",
    ".claude/skills/instagram-adapter",
    ".claude/skills/gmail-adapter",
    ".claude/skills/canvas-workflow",
    ".claude/skills/linkedin-lookback",
    ".claude/skills/analytics",
    ".claude/skills/content-marketing",
    ".claude/skills/seo-optimization",
    ".claude/skills/account-manager",
    ".claude/skills/project-manager",
    ".claude/skills/qa-compliance",
    ".claude/skills/support-manager",
    ".claude/skills/integration-manager",
    ".claude/skills/access-manager",
    ".claude/skills/campaign-executor",
    ".claude/skills/sheet-reader",
    ".claude/skills/start-app.md"
  ],
  "agents": [
    ".claude/agents/email-planner.md",
    ".claude/agents/email-executor.md",
    ".claude/agents/account-planner.md",
    ".claude/agents/compliance-checker.md",
    ".claude/agents/project-coordinator.md",
    ".claude/agents/support-router.md"
  ],
  "commands": [
    ".claude/commands/start.md",
    ".claude/commands/outreach.md",
    ".claude/commands/inbox.md",
    ".claude/commands/compose.md",
    ".claude/commands/reply.md",
    ".claude/commands/summarize.md",
    ".claude/commands/team.md",
    ".claude/commands/discover.md",
    ".claude/commands/workflow.md",
    ".claude/commands/linkedin.md",
    ".claude/commands/twitter.md",
    ".claude/commands/instagram.md",
    ".claude/commands/canvas.md",
    ".claude/commands/lookback.md",
    ".claude/commands/exa.md",
    ".claude/commands/websets.md",
    ".claude/commands/accounts.md",
    ".claude/commands/project.md",
    ".claude/commands/content.md",
    ".claude/commands/seo.md",
    ".claude/commands/analytics.md",
    ".claude/commands/qa.md",
    ".claude/commands/ticket.md",
    ".claude/commands/ops.md",
    ".claude/commands/access.md",
    ".claude/commands/verify.md",
    ".claude/commands/webhook.md",
    ".claude/commands/template.md"
  ],
  "hooks": [
    {
      "name": "keyword-router",
      "path": ".claude/hooks/keyword-router.cjs",
      "event": "pre_request",
      "description": "Routes requests based on detected keywords"
    },
    {
      "name": "pre-tool-router",
      "path": ".claude/hooks/pre-tool-router.cjs",
      "event": "pre_tool",
      "description": "Selects optimal MCP and applies rate limiting"
    },
    {
      "name": "context-detector",
      "path": ".claude/hooks/context-detector.cjs",
      "event": "pre_request",
      "description": "Analyzes user intent and extracts context"
    },
    {
      "name": "context-tracker",
      "path": ".claude/hooks/lib/context-tracker.cjs",
      "event": "status_update",
      "description": "Tracks context window usage"
    }
  ],
  "requires": {
    "claude-code": ">=1.0.0",
    "python": ">=3.9",
    "node": ">=18.0.0",
    "packages": [
      "google-api-python-client",
      "google-auth-httplib2",
      "google-auth-oauthlib",
      "gspread",
      "oauth2client",
      "python-dotenv",
      "rich",
      "jinja2",
      "pandas",
      "email-validator",
      "html2text",
      "pyyaml",
      "requests"
    ]
  },
  "mcp_integrations": {
    "exa": {
      "description": "Exa AI for intelligent people discovery and content research",
      "tools": [
        "linkedin_search_exa",
        "company_research_exa",
        "web_search_exa",
        "exa_search",
        "deep_researcher_start",
        "deep_researcher_check",
        "create_webset",
        "get_webset",
        "list_websets"
      ],
      "required_env": ["EXA_API_KEY"],
      "skills": ["discovery-engine", "content-marketing", "seo-optimization"]
    },
    "browser-use": {
      "description": "Browser-Use MCP for social platform automation",
      "tools": [
        "browser_task",
        "list_browser_profiles",
        "monitor_task",
        "list_skills",
        "get_cookies",
        "execute_skill"
      ],
      "skills": ["linkedin-adapter", "twitter-adapter", "instagram-adapter"]
    },
    "claudekit-extension": {
      "description": "ClaudeKit Browser Extension for LinkedIn, Twitter, Instagram automation",
      "connection": "WebSocket at ws://localhost:3000/ws",
      "api": "HTTP API at http://localhost:3000/api",
      "tools": [
        "linkedin_action",
        "twitter_action",
        "instagram_action",
        "extension_status",
        "rate_limits"
      ],
      "skills": ["linkedin-adapter", "twitter-adapter", "instagram-adapter"]
    }
  },
  "env": {
    "required": [],
    "optional": [
      "GOOGLE_CLIENT_ID",
      "GOOGLE_CLIENT_SECRET",
      "GOOGLE_REDIRECT_URI",
      "GMAIL_ACCESS_TOKEN",
      "GMAIL_REFRESH_TOKEN",
      "GOOGLE_SHEET_ID",
      "SENDER_EMAIL",
      "SENDER_NAME",
      "EMAIL_DELAY_SECONDS",
      "MAX_EMAILS_PER_BATCH",
      "DAILY_EMAIL_LIMIT",
      "DRY_RUN_MODE",
      "EXA_API_KEY",
      "LINKEDIN_CONNECTIONS_PER_DAY",
      "LINKEDIN_MESSAGES_PER_DAY",
      "TWITTER_FOLLOWS_PER_DAY",
      "TWITTER_DMS_PER_DAY",
      "INSTAGRAM_FOLLOWS_PER_DAY",
      "INSTAGRAM_DMS_PER_DAY",
      "DEFAULT_MIN_DELAY_SECONDS",
      "DEFAULT_MAX_DELAY_SECONDS",
      "WORKFLOW_TIMEZONE",
      "ANALYTICS_RETENTION_DAYS",
      "CONTENT_OUTPUT_DIR",
      "SEO_OUTPUT_DIR"
    ]
  },
  "capabilities": {
    "email": {
      "send_campaigns": true,
      "read_inbox": true,
      "compose": true,
      "reply": true,
      "summarize": true
    },
    "multi_platform": {
      "linkedin": true,
      "twitter": true,
      "instagram": true
    },
    "team_management": {
      "multi_user": true,
      "per_user_credentials": true,
      "browser_profiles": true
    },
    "discovery": {
      "exa_ai": true,
      "linkedin_search": true,
      "company_research": true,
      "websets": true
    },
    "workflows": {
      "multi_step": true,
      "multi_platform": true,
      "rate_limiting": true,
      "scheduling": true,
      "visual_canvas": true
    },
    "analytics": {
      "campaign_metrics": true,
      "platform_stats": true,
      "trend_reports": true
    },
    "content": {
      "blog_creation": true,
      "social_posts": true,
      "content_calendar": true
    },
    "seo": {
      "keyword_research": true,
      "competitor_analysis": true,
      "content_optimization": true
    }
  },
  "routing": {
    "keyword_router": ".claude/hooks/keyword-router.cjs",
    "pre_tool_router": ".claude/hooks/pre-tool-router.cjs",
    "context_detector": ".claude/hooks/context-detector.cjs",
    "workflow_triggers": ".claude/workflows/workflow-triggers.yaml"
  }
}
