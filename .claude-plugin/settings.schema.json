{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "10x Outreach Skill Settings",
  "description": "Configuration schema for the 10x Outreach Skill plugin",
  "type": "object",
  "properties": {
    "email": {
      "type": "object",
      "description": "Email configuration",
      "properties": {
        "delay_seconds": {
          "type": "integer",
          "default": 60,
          "minimum": 30,
          "description": "Delay between emails in seconds"
        },
        "max_per_batch": {
          "type": "integer",
          "default": 50,
          "minimum": 1,
          "maximum": 500,
          "description": "Maximum emails per batch"
        },
        "daily_limit": {
          "type": "integer",
          "default": 100,
          "minimum": 1,
          "maximum": 2000,
          "description": "Daily email sending limit"
        },
        "dry_run": {
          "type": "boolean",
          "default": false,
          "description": "Enable dry run mode (no actual sends)"
        }
      }
    },
    "platforms": {
      "type": "object",
      "description": "Platform-specific rate limits",
      "properties": {
        "linkedin": {
          "type": "object",
          "properties": {
            "connections_per_day": {
              "type": "integer",
              "default": 30,
              "minimum": 1,
              "maximum": 100
            },
            "messages_per_day": {
              "type": "integer",
              "default": 50,
              "minimum": 1,
              "maximum": 100
            },
            "views_per_day": {
              "type": "integer",
              "default": 100,
              "minimum": 1,
              "maximum": 200
            }
          }
        },
        "twitter": {
          "type": "object",
          "properties": {
            "follows_per_day": {
              "type": "integer",
              "default": 50,
              "minimum": 1,
              "maximum": 100
            },
            "dms_per_day": {
              "type": "integer",
              "default": 30,
              "minimum": 1,
              "maximum": 100
            },
            "likes_per_day": {
              "type": "integer",
              "default": 100,
              "minimum": 1,
              "maximum": 500
            }
          }
        },
        "instagram": {
          "type": "object",
          "properties": {
            "follows_per_day": {
              "type": "integer",
              "default": 40,
              "minimum": 1,
              "maximum": 100
            },
            "dms_per_day": {
              "type": "integer",
              "default": 20,
              "minimum": 1,
              "maximum": 50
            },
            "likes_per_day": {
              "type": "integer",
              "default": 100,
              "minimum": 1,
              "maximum": 500
            }
          }
        }
      }
    },
    "mcp": {
      "type": "object",
      "description": "MCP server preferences",
      "properties": {
        "exa": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "api_key_env": {
              "type": "string",
              "default": "EXA_API_KEY"
            }
          }
        },
        "browser_use": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true
            },
            "prefer_skills": {
              "type": "boolean",
              "default": true,
              "description": "Prefer pre-built skills over browser tasks"
            }
          }
        }
      }
    },
    "routing": {
      "type": "object",
      "description": "Request routing configuration",
      "properties": {
        "keyword_router_enabled": {
          "type": "boolean",
          "default": true
        },
        "context_detector_enabled": {
          "type": "boolean",
          "default": true
        },
        "pre_tool_router_enabled": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "analytics": {
      "type": "object",
      "description": "Analytics configuration",
      "properties": {
        "retention_days": {
          "type": "integer",
          "default": 90,
          "minimum": 7,
          "maximum": 365
        },
        "track_opens": {
          "type": "boolean",
          "default": true
        },
        "track_clicks": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "content": {
      "type": "object",
      "description": "Content marketing configuration",
      "properties": {
        "output_dir": {
          "type": "string",
          "default": "output/content"
        },
        "default_tone": {
          "type": "string",
          "enum": ["professional", "casual", "friendly", "formal"],
          "default": "professional"
        }
      }
    },
    "seo": {
      "type": "object",
      "description": "SEO configuration",
      "properties": {
        "output_dir": {
          "type": "string",
          "default": "output/seo"
        },
        "default_keyword_count": {
          "type": "integer",
          "default": 50,
          "minimum": 10,
          "maximum": 200
        }
      }
    },
    "workflow": {
      "type": "object",
      "description": "Workflow configuration",
      "properties": {
        "timezone": {
          "type": "string",
          "default": "America/Los_Angeles"
        },
        "min_delay_seconds": {
          "type": "integer",
          "default": 60,
          "minimum": 30
        },
        "max_delay_seconds": {
          "type": "integer",
          "default": 300,
          "minimum": 60
        }
      }
    }
  }
}
