# =============================================================================
# 10x-Outreach-Skill Configuration
# =============================================================================
# Copy this file to .env and fill in your credentials
# NEVER commit .env to version control!

# =============================================================================
# Google OAuth2 Credentials (from Google Cloud Console)
# =============================================================================
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing
# 3. Enable Gmail API and Google Sheets API
# 4. Go to APIs & Services > Credentials
# 5. Create OAuth 2.0 Client ID (Desktop App)
# 6. Download credentials and copy values here

GOOGLE_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8080/oauth/callback

# =============================================================================
# Gmail Tokens (Generated after first OAuth flow)
# =============================================================================
# These will be automatically populated after running auth_setup.py
# Leave empty initially - they will be filled after authentication

GMAIL_ACCESS_TOKEN=
GMAIL_REFRESH_TOKEN=

# =============================================================================
# Sender Configuration
# =============================================================================
# Your Gmail address that will send the emails
SENDER_EMAIL=your_email@gmail.com
SENDER_NAME=Your Name

# =============================================================================
# Google Sheets Configuration
# =============================================================================
# The ID of your Google Sheet containing email recipients
# You can find this in the Sheet URL: https://docs.google.com/spreadsheets/d/{SHEET_ID}/edit
# Leave empty to specify per-campaign

GOOGLE_SHEET_ID=

# =============================================================================
# Campaign Settings
# =============================================================================
# Delay between emails in seconds (recommended: 60-120 to avoid spam flags)
EMAIL_DELAY_SECONDS=60

# Maximum emails per batch (recommended: 50-100 for safety)
MAX_EMAILS_PER_BATCH=50

# Enable dry run mode (true = no actual emails sent, just simulation)
DRY_RUN_MODE=false

# =============================================================================
# Rate Limiting & Safety
# =============================================================================
# Daily email limit (Gmail limit is 500 for regular accounts, 2000 for Workspace)
DAILY_EMAIL_LIMIT=100

# Pause duration if rate limited (in seconds)
RATE_LIMIT_PAUSE=300

# =============================================================================
# Output Configuration
# =============================================================================
OUTPUT_DIR=./output
LOG_DIR=./output/logs
LOG_LEVEL=INFO

# =============================================================================
# Optional: SMTP Fallback (if OAuth fails)
# =============================================================================
# Only use if OAuth2 doesn't work for your use case
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USE_TLS=true
# APP_PASSWORD=your_app_specific_password

# =============================================================================
# Debug Settings
# =============================================================================
DEBUG_MODE=false
SAVE_SENT_COPIES=true

# =============================================================================
# 100X OUTREACH SYSTEM - NEW SETTINGS
# =============================================================================

# =============================================================================
# Exa AI Configuration (for people discovery)
# =============================================================================
# Get your API key from https://exa.ai/
EXA_API_KEY=your_exa_api_key_here

# =============================================================================
# Platform Rate Limits (per user, per day)
# =============================================================================
# Conservative limits to avoid detection and bans
LINKEDIN_CONNECTIONS_PER_DAY=20
LINKEDIN_MESSAGES_PER_DAY=50
LINKEDIN_PROFILE_VIEWS_PER_DAY=100
TWITTER_FOLLOWS_PER_DAY=50
TWITTER_DMS_PER_DAY=50
INSTAGRAM_FOLLOWS_PER_DAY=30
INSTAGRAM_DMS_PER_DAY=30

# =============================================================================
# Workflow Settings
# =============================================================================
DEFAULT_MIN_DELAY_SECONDS=120
DEFAULT_MAX_DELAY_SECONDS=600
WORKFLOW_ACTIVE_HOURS_START=09:00
WORKFLOW_ACTIVE_HOURS_END=18:00
WORKFLOW_TIMEZONE=UTC
